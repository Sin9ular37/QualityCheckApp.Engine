<Window x:Class="QualityCheckApp.Integration.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="质检整合模块"
        Height="720"
        Width="1200"
        MinHeight="640"
        MinWidth="960">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <Grid Background="#FF0F172A">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Margin="20"
                Padding="20"
                CornerRadius="12"
                Background="#FF1E2438"
                BorderBrush="#3327D1FF"
                BorderThickness="1">
            <StackPanel>
                <TextBlock Text="操作引导"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="#FFE2E8F0" />
                <TextBlock Text="1. 仅支持上传 ZIP 压缩包；必须包含 测试1、测试2、测试3 三个目录。"
                           Margin="0,12,0,0"
                           Foreground="#FFA9B0C6"
                           FontSize="15" />
                <TextBlock Text="2. 测试1 目录下需包含至少一个文件地理数据库 (.gdb)。"
                           Margin="0,4,0,0"
                           Foreground="#FFA9B0C6"
                           FontSize="15" />
                <TextBlock Text="3. 校验通过后会列出 .gdb 中的图层，可选择是否跳转至 MapControl 模块查看详情。"
                           Margin="0,4,0,0"
                           Foreground="#FFA9B0C6"
                           FontSize="15" />
            </StackPanel>
        </Border>

        <Border Grid.Row="1"
                Margin="20,0,20,10"
                Padding="20"
                CornerRadius="12"
                Background="#FF141B30">
            <StackPanel>
                <TextBlock Text="压缩包选择"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="#FFEAF0FF" />
                <TextBlock Text="{Binding SelectedZipPath, TargetNullValue=尚未选择压缩包}"
                           Margin="0,8,0,0"
                           TextWrapping="Wrap"
                           Foreground="#FF8A94B4" />
                <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                    <Button Content="选择压缩包"
                            Width="140"
                            Margin="0,0,12,0"
                            Click="OnSelectZipClick"
                            IsEnabled="{Binding IsNotBusy}" />
                    <Button Content="校验并解析"
                            Width="140"
                            Margin="0,0,12,0"
                            Click="OnValidateZipClick"
                            IsEnabled="{Binding CanAnalyze}" />
                    <Button Content="清空"
                            Width="100"
                            Click="OnClearClick"
                            IsEnabled="{Binding IsNotBusy}" />
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Row="2"
                Margin="20,0,20,10"
                Padding="20"
                CornerRadius="12"
                Background="#FF141B30">
            <StackPanel>
                <TextBlock Text="运行状态"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="#FFEAF0FF" />
                <TextBlock Text="{Binding StatusMessage}"
                           Margin="0,8,0,0"
                           TextWrapping="Wrap"
                           Foreground="#FF8A94B4" />
                <ProgressBar Height="8"
                             Margin="0,16,0,0"
                             IsIndeterminate="{Binding IsBusy}"
                             Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </StackPanel>
        </Border>

        <GroupBox Grid.Row="3"
                  Margin="20,0,20,10"
                  Header="已识别的 .gdb 图层"
                  Padding="12"
                  Foreground="#FFE2E8F0">
            <DataGrid ItemsSource="{Binding Layers}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      Background="#FF0F172A"
                      Foreground="#FFE2E8F0"
                      AlternatingRowBackground="#331ED3FF">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="图层名称" Binding="{Binding LayerName}" Width="2*" />
                    <DataGridTextColumn Header="所属 .gdb" Binding="{Binding GdbPath}" Width="3*" />
                    <DataGridTextColumn Header="几何类型" Binding="{Binding GeometryType}" Width="*" />
                    <DataGridCheckBoxColumn Header="可显示" Binding="{Binding Displayable}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <StackPanel Grid.Row="4"
                    Margin="20,0,20,20"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="查看详细信息"
                    Width="160"
                    Height="36"
                    Click="OnViewDetailsClick"
                    IsEnabled="{Binding CanViewDetails}" />
        </StackPanel>

        <Border Grid.RowSpan="5"
                Background="#AA0F172A"
                Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="正在处理压缩包，请稍后..."
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#FFEAF0FF" />
            </StackPanel>
        </Border>
    </Grid>
</Window>